// Shutdown button control for main shop lights
rule "Commons Lights"
when
    Item ShutDownButton received update DOWNSHUT
then
    sendCommand(lights_east,OFF)
    sendCommand(ceiling_fans,OFF)
end

// Dash button control for tool crib lights
rule "Tool Crib Dash button pressed"
    when
        Channel "amazondashbutton:dashbutton:50-f5-da-11-a3-fd:press" triggered
    then
    if(toolCribLights.state == OFF){
        sendCommand(toolCribLights,ON)
    }else{
        sendCommand(toolCribLights,OFF)
    }
end

rule "Machine Shop Lights Switch OFF"
when
    Item machineShopLights changed to OFF
then
    sendCommand(LightSwitch029,OFF)
    sendCommand(LightSwitch030,OFF)
    sendCommand(LightSwitch031,OFF)
    sendCommand(LightSwitch032,OFF)
    sendCommand(LightSwitch033,OFF)
    sendCommand(LightSwitch034,OFF)
    sendCommand(LightSwitch035,OFF)
end

rule "Machine Shop Lights Switch ON"
when
    Item machineShopLights changed to ON
then
    sendCommand(LightSwitch029,ON)
    sendCommand(LightSwitch030,ON)
    sendCommand(LightSwitch031,ON)
    sendCommand(LightSwitch032,ON)
    sendCommand(LightSwitch033,ON)
    sendCommand(LightSwitch034,ON)
    sendCommand(LightSwitch035,ON)
end