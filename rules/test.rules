var String signString = virtualSignBuffer.state.toString

rule "Display sign buffer"
when
	Item virtualSignBuffer changed
then
	var String signString = virtualSignBuffer.state.toString
	sendCommand(displayLEDmatrix,"^P10^S"+signString+"^R")
end


rule "Disco fever"
when
	Item DiscoBall changed to ON
then
	sendCommand(displayLEDmatrix, "^=1^P19^SDISCO FEVER")
end

rule "Someone's here"
when
	Item Doorbell changed to ^G
then
	sendCommand(displayLEDmatrix, "^SSomeone's here")
end